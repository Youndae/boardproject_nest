{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "#src/*": ["src/*"],
      "#config/*": ["src/config/*"],
      "#common/*": ["src/common/*"],
      "#auth/*": ["src/auth/*"],
      "#board/*": ["src/board/*"],
      "#comment/*": ["src/comment/*"],
      "#imageBoard/*": ["src/image-board/*"],
      "#member/*": ["src/member/*"],
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
